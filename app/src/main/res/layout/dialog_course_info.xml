<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

        <data>
            <variable
                name="course"
                type="com.example.classschedule.domain.Course" />
        </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教师名字"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/editTextTeacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入教师名字"
                android:text="@={course.teacherName}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程名    "
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/editTextCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入课程名"
                android:text="@={course.courseName}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教学周    "
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/editTextWeek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入教学周"
                android:text="@={course.weekSchedule}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课地点"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/editTextLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入上课地点"
                android:text="@={course.classroom}" />
        </LinearLayout>


        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空课程信息"/>

    </LinearLayout>

</layout>
