<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="#ADD8E6">

        <TextView
            android:id="@+id/day_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="节次/周次"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Monday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="星期一"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Tuesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="星期二"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Wednesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="星期三"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Thursday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="星期四"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Friday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="星期五"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--     课程     -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/class_height"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/first_class"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="#EEFF00"
            android:gravity="center"
            android:text="第一节课\n8:20-9:55" />


        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Monday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "1"/>

        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Tuesday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "2"/>

        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Wednesday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "3"/>

        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Thursday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "4"/>

        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Friday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "5"/>

    </LinearLayout>


</LinearLayout>
