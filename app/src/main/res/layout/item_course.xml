        android:layout_height="@dimen/class_height"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/first_class"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="#EEFF00"
            android:gravity="center"
            android:text="第一节课\n8:20-9:55"
            android:textSize="@dimen/course_head_text_size"/>


        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Monday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "1"/>

        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Tuesday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "2"/>

        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Wednesday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "3"/>

        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Thursday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "4"/>

        <com.example.classschedule.component.CourseButton
            android:id="@+id/first_Friday"
            android:layout_width="0dp"
            android:layout_height="@dimen/class_height"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:layout_gravity="center"
            android:textSize="@dimen/course_text_size"
            app:section = "1"
            app:week = "5"/>
    </LinearLayout>


